<!-- Edit Questionnaire Section -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Questionnaire</h4>
                <div class="form-container">
                    <form id="editQuestionnaireForm" action="<%= base %>/update-questionnaire/<%= questionnaire.id %>" method="POST">
                        <!-- Question Field -->
                        <div class="form-group">
                            <label for="question">Question</label>
                            <input type="text" class="form-control" id="question" name="question" value="<%= questionnaire.question %>" required>
                        </div>

                        <!-- Answer Choices Field -->
                        <div class="form-group">
                            <label for="answer_choices">Answer Choices</label>
                            <textarea class="form-control" id="answer_choices" name="answer_choices" rows="4" required><%= Object.keys(questionnaire.answer_choices).join('\n') %></textarea>
                            <small class="form-text text-muted">Enter each answer choice on a new line.</small>
                        </div>

                        <!-- Is Mandatory Field -->
                        <div class="form-group">
                            <label for="is_mandatory">Is Mandatory?</label>
                            <select class="form-control" id="is_mandatory" name="is_mandatory" required>
                                <option value="true" <%= questionnaire.is_mandatory ? 'selected' : '' %>>Yes</option>
                                <option value="false" <%= !questionnaire.is_mandatory ? 'selected' : '' %>>No</option>
                            </select>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary">Update Questionnaire</button>
                        <a href="<%= base %>/questionnaires" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('FooterJs') %>

<script>
    $(document).ready(function() {
        // Fetch all questionnaires using AJAX
        $.ajax({
            url: "https://eterna.website:4000/api/getallquestionnaires",  // Adjust endpoint as necessary
            method: 'GET',
            success: function(data) {
                // Assuming 'data' is an array of questionnaires
                console.log(data);
                const questionnaires = data.questionnaires;
                
                if (questionnaires.length > 0) {
                    let tableContent = '';
                    questionnaires.forEach(function(questionnaire) {
                        tableContent += `
                            <tr>
                                <td>${questionnaire.id}</td>
                                <td>${questionnaire.question}</td>
                                <td>${Object.keys(questionnaire.answer_choices).join('<br>')}</td>
                                <td>${questionnaire.is_mandatory ? 'Yes' : 'No'}</td>
                                <td>
                                    <!-- Edit Button -->
                                    <a href="<%=base%>/edit-questionnaire/${questionnaire.id}" class="btn btn-sm btn-warning">
                                        <i class="mdi mdi-pencil"></i> Edit
                                    </a>
                                    <!-- Delete Button -->
                                    <button onclick="deleteQuestionnaire(${questionnaire.id})" class="btn btn-sm btn-danger">
                                        <i class="mdi mdi-delete"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        `;
                    });
                    $('#questionnaire-table-body').html(tableContent);
                } else {
                    $('#questionnaire-table-body').html('<tr><td colspan="5">No questionnaires found.</td></tr>');
                }
            },
            error: function(error) {
                Swal.fire(
                    'Error!',
                    'Failed to fetch questionnaires.',
                    'error'
                );
            }
        });

        // Function to delete a questionnaire
        window.deleteQuestionnaire = function(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'You will not be able to recover this questionnaire!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Perform AJAX request to delete the questionnaire
                    $.ajax({
                        url: '<%=base%>/delete-questionnaire/' + id,
                        method: 'DELETE',
                        success: function(response) {
                            Swal.fire(
                                'Deleted!',
                                'The questionnaire has been deleted.',
                                'success'
                            ).then(() => {
                                // Reload the page to reflect changes
                                location.reload();
                            });
                        },
                        error: function(error) {
                            Swal.fire(
                                'Error!',
                                'Failed to delete the questionnaire.',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    });
</script>

