<script>


const totalData = <%- JSON.stringify(totaldata) %>

function updateChart(period) {
    // Simulate data based on period (day, month, year)
    let orderData;
    switch (period) {
        case 'day':
            orderData = [10, 20, 15, 25, 30]; // Example daily data
            break;
        case 'month':
            orderData = [100, 150, 200, 180, 220]; // Example monthly data
            break;
        case 'year':
            orderData = [1200, 1300, 1400, 1500, 1600]; // Example yearly data
            break;
    }

    var combineChart = c3.generate({
        bindto: '#combine-chart',
        data: {
            columns: [
                ['Orders', ...orderData]
            ],
            types: {
                Orders: 'bar'
            }
        },
        axis: {
            x: {
                type: 'category',
                categories: period === 'day' ? ['Mon', 'Tue', 'Wed', 'Thu', 'Fri'] : 
                           period === 'month' ? ['Jan', 'Feb', 'Mar', 'Apr', 'May'] : 
                           ['2020', '2021', '2022', '2023', '2024']
            }
        }
    });
}

// Donut chart for table distribution
var donutChart = c3.generate({
    bindto: '#donut-chart',
    data: {
        columns: [
            ['Orders', totalData.orders || 0],
            ['Products', totalData.products || 0],
            ['Users', totalData.users || 0],
            ['Shipments', totalData.shipments || 0] 
        ],
        type: 'donut'
    },
    donut: {
        title: "Table Counts"
    }
});

// Initial chart load
updateChart('month');

// Update mini-stats with dynamic data (example values, replace with actual API data if available)
document.getElementById('totalIncome').innerText = totalData.totalIncome || '22506';
document.getElementById('totalStock').innerText = totalData.totalStock || '0';
document.getElementById('activeUsers').innerText = totalData.activeUsers || '0';
document.getElementById('pendingShipments').innerText = totalData.pendingShipments || '0';
</script>

