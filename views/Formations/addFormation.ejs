                function addformation() {
    // Update all CKEditor instances before serializing the form
    for (instance in CKEDITOR.instances) {
        CKEDITOR.instances[instance].updateElement();
    }

    // Get form data
    var formation_title = $('#formationtitile').val();
    var txt_content = $('#txt_content').val(); // Get updated CKEditor content
    var txt_formationkeyword = $('#meta_keyword').val();
    var meta_description = $('#meta_description').val();
    var cat_id = $('#categoryId').val();
    var formation_userid = $('#username').val();
    var columns = $('#columns').val();
    var txt_mediatype = $('input[name="txt_mediatype"]:checked').val();
    var txt_mediautub = $('#videourl').val();
    var sources = $('#source').val();
    var imageurlstring = $('#imageurlstring').val();
    var thumbimageurlstring = $('#thumbimageurlstring').val();
    var formation_tag = $('#formation_tag').val();

    // Validate required fields
    let missingFields = [];

    if (!formation_title) missingFields.push("Formation Title");
    if (!txt_content) missingFields.push("Content");
    if (!txt_formationkeyword) missingFields.push("Formation Keyword");
    if (!meta_description) missingFields.push("Meta Description");
    if (!cat_id) missingFields.push("Category");
    if (!columns) missingFields.push("Columns");
    if (!txt_mediatype) missingFields.push("Media Type");
    if (!formation_tag) missingFields.push("Formation Tag");

    if (missingFields.length > 0) {
        $(window).scrollTop(0);
        document.getElementById('alertmsg').innerHTML = `
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Failed!</strong> The following fields are required: <br>
                <ul>
                    ${missingFields.map(field => `<li>${field}</li>`).join('')}
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>`;
        return false;
    }

    // Serialize form data
    var frm = $('#addproduct').serialize();

    // Send AJAX request
    $.ajax({
        type: 'POST',
        dataType: 'json',
        url: '<%=urlapi%>addformationadmin',
        data: frm,
        success: function (data) {
            if (data.status == 'danger') {
                document.getElementById('alertmsg').innerHTML = '<div class="alert alert-danger alert-dismissible fade show" role="alert"><strong>Failed!</strong> ' + data.message + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>';
            } else {
                document.getElementById('alertmsg').innerHTML = '<div class="alert alert-' + data.status + ' alert-dismissible fade show" role="alert"><strong>' + data.status + '!</strong> ' + data.message + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>';
            }
            $(window).scrollTop(0);
        },
        error: function (request, status, error) {
            var string = request.responseJSON.message.split(",");
            document.getElementById('alertmsg').innerHTML = '<div class="alert alert-danger alert-dismissible fade show" role="alert"><strong>Failed!</strong> ' + string[0] + '.<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>';
        }
    });
}
